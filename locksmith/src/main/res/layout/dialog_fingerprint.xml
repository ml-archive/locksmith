<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/dialogFragmentRootContainer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:minHeight="10000dp"
    android:minWidth="10000dp">

    <LinearLayout
        android:id="@+id/dialogFragmentMainContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background_card"
        android:elevation="4dp"
        android:gravity="center_horizontal"
        android:minWidth="10000dp"
        android:orientation="vertical"
        app:layout_behavior="android.support.design.widget.BottomSheetBehavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="4dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/dialogFragmentIvHeader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_normal"
                android:background="@drawable/background_circle_small"
                android:backgroundTint="@color/white"
                android:elevation="4dp"
                android:padding="@dimen/padding_small"
                android:src="@drawable/ic_lock_black_24dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/dialogFragmentTvTitle"
                    style="@style/FingerprintDialogTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_small"
                    android:maxLines="1"
                    tools:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Nam fringilla purus malesuada ullamcorper aliquam." />

                <TextView
                    android:id="@+id/dialogFragmentTvSubtitle"
                    style="@style/FingerprintDialogSubtitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_small"
                    android:maxLines="1"
                    tools:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Nam fringilla purus malesuada ullamcorper aliquam." />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/dialogFragmentTvDescription"
            style="@style/FingerprintDialogDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_normal"
            android:layout_marginLeft="@dimen/margin_normal"
            android:layout_marginRight="@dimen/margin_normal"
            android:layout_marginTop="@dimen/margin_medium"
            tools:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Nam fringilla purus malesuada ullamcorper aliquam." />

        <ImageView
            android:id="@+id/dialogFragmentIvFingerprint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_normal"

            android:background="@drawable/background_circle"
            android:backgroundTint="@color/fingerprint_normal"
            android:contentDescription="@string/description_fingerprint_icon"
            android:elevation="4dp"

            android:padding="@dimen/padding_medium"
            android:src="@drawable/ic_fingerprint_white_24dp" />


        <TextView
            android:id="@+id/dialogFragmentTvMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_normal"
            android:visibility="gone"
            tools:text="Example message goes here" />

        <Button
            android:id="@+id/dialogFragmentBtnCancel"
            style="?android:attr/buttonBarNegativeButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_normal"
            android:layout_marginTop="@dimen/margin_normal"
            tools:text="Cancel" />

    </LinearLayout>

</android.support.design.widget.CoordinatorLayout>